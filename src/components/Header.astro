---
import Link from "./Link.astro";

// Constants
import { USERNAME } from "../consts";
---
<header>
	<!-- Navigation bar -->
	<nav class="glass border-solid border-2 rounded-box flex justify-around items-center p-1">
		<!-- Profile -->
		<a href="/">
			<div class="flex items-center">
				<!-- Profile image -->
				<img class="w-12 h-12 rounded-full" src="/pfp.png" alt="My profile picture">

				<!-- Name and pronouns -->
				<div class="pl-2">
					<h2 class="text-md font-bold">{USERNAME}</h2>
					<h3 class="text-xs">he/him</h3>
				</div>
			</div>
		</a>

		<!-- Navigation links -->
		<div class="space-x-1 pr-4">
			<Link class="decoration-2 hover:underline hover:text-accent" href="/">Home</Link>
			<Link class="decoration-2 hover:underline hover:text-accent" href="/blog">Blog</Link>
		</div>
	</nav>
</header>
