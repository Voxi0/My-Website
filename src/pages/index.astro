---
// Layouts
import DefaultLayout from "../layouts/default.astro";

// Variables
const identity = {
	name: "Voxi0",
	age: "15",
	country: "the UK",
	hobbies: ["programming", "listening to music", "mathematics (even if I'm bad at it ðŸ˜…)"]
};
---
<DefaultLayout title="Voxi0" icon="/icon.svg">
